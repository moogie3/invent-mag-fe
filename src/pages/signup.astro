---
import BaseLayout from '../layouts/BaseLayout.astro';
import Modal from '../components/Modal.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Create Account - Invent-MAG">
  <section class="py-12 lg:py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-primary/5 to-transparent pointer-events-none"></div>
    <div class="absolute top-10 right-20 w-64 h-64 bg-primary/10 rounded-full blur-3xl pointer-events-none"></div>
    <div class="absolute bottom-20 left-10 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="max-w-2xl mx-auto px-4 xl:px-0 relative z-10">
      <div class="text-center mb-10">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary to-purple-500 rounded-2xl mb-6 shadow-lg shadow-primary/20">
          <img src="/icons/user-add.svg" alt="Sign Up" class="w-8 h-8 text-dark" />
        </div>
        <h2 class="heading-1 text-3xl lg:text-4xl">
          Start Your 7-Day Free Trial
        </h2>
        <p class="mt-4 text-body text-base max-w-md mx-auto">
          Get started with your own enterprise inventory management workspace in seconds
        </p>
      </div>

      <div class="card p-6 md:p-10 backdrop-blur-sm bg-dark-surface/80 border border-white/10">
        <form id="registerForm" class="space-y-5">
          <!-- Hidden plan field defaulted to professional -->
          <input type="hidden" name="plan" id="plan" value="professional" />
          
          <div class="grid md:grid-cols-2 gap-5 mt-2">
            <div>
              <label for="name" class="label">
                <img src="/icons/user.svg" alt="User" class="w-4 h-4 text-primary" />
                Full Name
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="input-field mt-2 py-2.5"
                placeholder="John Doe"
              />
              <span id="name-error" class="error-message text-red-400 text-sm"></span>
            </div>

            <div>
              <label for="shopname" class="label">
                <img src="/icons/building.svg" alt="Shop" class="w-4 h-4 text-primary" />
                Shop Name
              </label>
              <input
                type="text"
                name="shopname"
                id="shopname"
                required
                class="input-field mt-2 py-2.5"
                placeholder="my-shop"
              />
              <span id="shopname-error" class="error-message text-red-400 text-sm"></span>
            </div>
          </div>

          <div>
            <label for="email" class="label">
              <img src="/icons/envelope.svg" alt="Email" class="w-4 h-4 text-primary" />
              Email address
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="input-field mt-2 py-2.5"
              placeholder="you@company.com"
            />
            <span id="email-error" class="error-message text-red-400 text-sm"></span>
          </div>

          <div class="grid md:grid-cols-2 gap-5">
            <div>
              <label for="password" class="label">
                <img src="/icons/lock.svg" alt="Password" class="w-4 h-4 text-primary" />
                Password
              </label>
              <input
                type="password"
                name="password"
                id="password"
                required
                minlength="8"
                class="input-field mt-2 py-2.5"
                placeholder="Min. 8 characters"
              />
              <span id="password-error" class="error-message text-red-400 text-sm"></span>
            </div>

            <div>
              <label for="password_confirmation" class="label">
                <img src="/icons/shield-check.svg" alt="Confirm" class="w-4 h-4 text-primary" />
                Confirm Password
              </label>
              <input
                type="password"
                name="password_confirmation"
                id="password_confirmation"
                required
                class="input-field mt-2 py-2.5"
                placeholder="Repeat password"
              />
            </div>
          </div>

          <div class="flex items-start gap-3 p-4 bg-primary/5 border border-primary/20 rounded-lg">
            <input type="checkbox" id="terms" required class="mt-1 w-4 h-4 rounded border-gray-600 bg-dark text-primary focus:ring-primary" />
            <label for="terms" class="text-sm text-gray-muted">
              I agree to the <a href="#" class="text-primary hover:underline">Terms of Service</a> and <a href="#" class="text-primary hover:underline">Privacy Policy</a>
            </label>
          </div>

          <button
            type="submit"
            class="btn btn-primary w-full py-3 px-4 text-base font-semibold"
          >
            <span class="flex items-center justify-center gap-2">
              <img src="/icons/user-add.svg" alt="Sign Up" class="w-5 h-5" />
              Create My Account
            </span>
          </button>

          <div class="text-center text-base text-gray-muted">
            Already have an account? 
            <a href="/login" class="btn-ghost font-semibold text-primary">
              Sign in
            </a>
          </div>
        </form>
      </div>
      
      <p class="mt-6 text-center text-sm text-gray-500">
        No credit card required. Full access to professional features for 7 days.
      </p>
    </div>
  </section>

  <!-- Confirmation Modal -->
  <Modal id="confirmModal" title="Confirm Your Registration" type="confirm">
    <div class="space-y-4">
      <p class="text-gray-muted">Please review your information before submitting:</p>
      
      <div class="bg-dark border border-white/5 rounded-lg p-4 space-y-3">
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-400">Full Name:</span>
          <span class="text-sm text-light" data-confirm="name">-</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-400">Shop Name:</span>
          <span class="text-sm text-light" data-confirm="shopname">-</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-400">Email:</span>
          <span class="text-sm text-light" data-confirm="email">-</span>
        </div>
        <div class="flex justify-between" id="confirm-plan-row" style="display: none;">
          <span class="text-sm font-medium text-gray-400">Plan:</span>
          <span class="text-sm text-light" data-confirm="plan">-</span>
        </div>
      </div>

      <p class="text-xs text-gray-500 italic">
        By confirming, you agree to create an account with the information above.
      </p>
    </div>

    <div slot="footer">
      <button
        type="button"
        class="px-4 py-2 text-sm font-medium text-light bg-transparent border border-white/10 rounded-md hover:bg-white/5 transition-colors"
        data-close-modal="confirmModal"
      >
        Cancel
      </button>
      <button
        type="button"
        onclick="confirmRegistration()"
        class="px-4 py-2 text-sm font-medium text-white bg-primary rounded-md hover:bg-primary/90 transition-colors shadow-sm text-dark"
      >
        Confirm & Register
      </button>
    </div>
  </Modal>

  <!-- Success Modal -->
  <Modal id="successModal" title="Registration Successful!" type="success">
    <div class="text-center py-4">
      <p class="modal-message text-light text-lg">
        Your account has created successfully!
      </p>
      <p class="mt-4 text-sm text-gray-muted">
        You will be redirected to the login page shortly...
      </p>
    </div>

    <div slot="footer">
      <button
        type="button"
        class="px-6 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 transition-colors shadow-sm"
        onclick="if(window.tempTenantLoginUrl) { window.location.href = window.tempTenantLoginUrl; } else { alert('Could not determine the login URL.'); }"
      >
        Go to Login
      </button>
    </div>
  </Modal>

  <!-- Error Modal -->
  <Modal id="errorModal" title="Registration Error" type="error">
    <div class="py-2">
      <p class="modal-message text-light whitespace-pre-line">
        An error occurred during registration.
      </p>
    </div>

    <div slot="footer">
      <button
        type="button"
        class="px-6 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700 transition-colors shadow-sm"
        data-close-modal="errorModal"
      >
        Close
      </button>
    </div>
  </Modal>

  <!-- Include modal and register scripts -->
  <script is:inline src="/js/modal.js"></script>
  <script is:inline src="/js/register.js"></script>
  <Footer />
</BaseLayout>
