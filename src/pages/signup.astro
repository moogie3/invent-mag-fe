---
import BaseLayout from '../layouts/BaseLayout.astro';
import Modal from '../components/Modal.astro';
---

<BaseLayout title="Create Account - Invent-MAG">
  <section class="py-12 lg:py-24">
    <div class="max-w-2xl mx-auto px-4 xl:px-0">
      <div class="card p-6 md:p-10 backdrop-blur-sm">
        <div class="text-center">
          <h2 class="heading-1">
            Create an account
          </h2>
          <p class="mt-4 text-body">
            Get started with your own workspace in just a few minutes.
          </p>
        </div>

        <form id="registerForm" class="mt-8 space-y-6">
          <div>
            <label for="name" class="label">
              Full Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="input-field mt-1"
              placeholder="John Doe"
            />
            <span id="name-error" class="error-message text-red-400 text-sm"></span>
          </div>

          <div>
            <label for="shopname" class="label">
              Shop Name
            </label>
            <input
              type="text"
              name="shopname"
              id="shopname"
              required
              class="input-field mt-1"
              placeholder="My Awesome Shop"
            />
            <span id="shopname-error" class="error-message text-red-400 text-sm"></span>
          </div>

          <div>
            <label for="email" class="label">
              Email address
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="input-field mt-1"
              placeholder="you@example.com"
            />
            <span id="email-error" class="error-message text-red-400 text-sm"></span>
          </div>

          <div>
            <label for="password" class="label">
              Password
            </label>
            <input
              type="password"
              name="password"
              id="password"
              required
              minlength="8"
              class="input-field mt-1"
              placeholder="Password"
            />
            <span id="password-error" class="error-message text-red-400 text-sm"></span>
            <p class="mt-1 text-xs text-gray-muted">Must be at least 8 characters</p>
          </div>

          <div>
            <label for="password_confirmation" class="label">
              Confirm Password
            </label>
            <input
              type="password"
              name="password_confirmation"
              id="password_confirmation"
              required
              class="input-field mt-1"
              placeholder="Confirm Password"
            />
          </div>

          <div>
            <button
              type="submit"
              class="btn btn-primary w-full py-2.5 px-4 text-sm"
            >
              Sign Up
            </button>
          </div>

          <div class="text-center text-sm text-gray-muted">
            Already have an account? 
            <a href="/login" class="btn-ghost">
              Sign in
            </a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Confirmation Modal -->
  <Modal id="confirmModal" title="Confirm Your Registration" type="confirm">
    <div class="space-y-4">
      <p class="text-gray-muted">Please review your information before submitting:</p>
      
      <div class="bg-dark border border-white/5 rounded-lg p-4 space-y-3">
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-400">Full Name:</span>
          <span class="text-sm text-light" data-confirm="name">-</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-400">Shop Name:</span>
          <span class="text-sm text-light" data-confirm="shopname">-</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-400">Email:</span>
          <span class="text-sm text-light" data-confirm="email">-</span>
        </div>
      </div>

      <p class="text-xs text-gray-500 italic">
        By confirming, you agree to create an account with the information above.
      </p>
    </div>

    <div slot="footer">
      <button
        type="button"
        class="px-4 py-2 text-sm font-medium text-light bg-transparent border border-white/10 rounded-md hover:bg-white/5 transition-colors"
        data-close-modal="confirmModal"
      >
        Cancel
      </button>
      <button
        type="button"
        onclick="confirmRegistration()"
        class="px-4 py-2 text-sm font-medium text-white bg-primary rounded-md hover:bg-primary/90 transition-colors shadow-sm text-dark"
      >
        Confirm & Register
      </button>
    </div>
  </Modal>

  <!-- Success Modal -->
  <Modal id="successModal" title="Registration Successful!" type="success">
    <div class="text-center py-4">
      <p class="modal-message text-light text-lg">
        Your account has created successfully!
      </p>
      <p class="mt-4 text-sm text-gray-muted">
        You will be redirected to the login page shortly...
      </p>
    </div>

    <div slot="footer">
      <button
        type="button"
        class="px-6 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 transition-colors shadow-sm"
        onclick="if(window.tempTenantLoginUrl) { window.location.href = window.tempTenantLoginUrl; } else { alert('Could not determine the login URL.'); }"
      >
        Go to Login
      </button>
    </div>
  </Modal>

  <!-- Error Modal -->
  <Modal id="errorModal" title="Registration Error" type="error">
    <div class="py-2">
      <p class="modal-message text-light whitespace-pre-line">
        An error occurred during registration.
      </p>
    </div>

    <div slot="footer">
      <button
        type="button"
        class="px-6 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700 transition-colors shadow-sm"
        data-close-modal="errorModal"
      >
        Close
      </button>
    </div>
  </Modal>

  <!-- Include modal and register scripts -->
  <script is:inline src="/js/modal.js"></script>
  <script is:inline src="/js/register.js"></script>
</BaseLayout>
