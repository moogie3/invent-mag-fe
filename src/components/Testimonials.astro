<section class="bg-dark-surface py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 xl:px-0 relative" 
         x-data="{
           currentTestimonial: 0,
           testimonials: [
             {
               quote: 'Working with Acme Design was a pleasure from start to finish. Their team was responsive, collaborative, and delivered exceptional designs.',
               author: 'Jennifer Carter',
               role: 'Head of Marketing'
             },
             {
               quote: 'The attention to detail and creative solutions provided by this team exceeded our expectations. They transformed our vision into reality with remarkable precision.',
               author: 'Michael Rodriguez',
               role: 'CEO'
             },
             {
               quote: 'Outstanding work! The design team delivered exactly what we needed and more. Their professionalism and expertise made the entire process seamless.',
               author: 'Sarah Thompson',
               role: 'Product Manager'
             }
           ],
           get currentQuote() { return this.testimonials[this.currentTestimonial]; },
           nextTestimonial() {
             this.currentTestimonial = (this.currentTestimonial + 1) % this.testimonials.length;
           },
           prevTestimonial() {
             this.currentTestimonial = this.currentTestimonial === 0 ? this.testimonials.length - 1 : this.currentTestimonial - 1;
           }
         }" 
         x-init="setInterval(() => nextTestimonial(), 5000)">
      
      <figure class="relative flex flex-col gap-y-6 sm:mx-auto sm:w-11/12 xl:gap-y-9">
        <blockquote class="flex flex-col items-start">
          <p class="text-xl font-medium font-heading text-light md:text-2xl xl:text-3xl" 
             x-text="`&quot;${currentQuote.quote}&quot;`"></p>
          
          <div class="mt-6 flex flex-wrap gap-4 xl:mt-9">
            <figcaption class="font-medium text-light" x-text="currentQuote.author"></figcaption>
            <div class="badge bg-white/10 text-gray-muted border border-white/5" 
                 x-text="currentQuote.role"></div>
          </div>
          
          <img class="mt-6 h-8 xl:mt-9 brightness-0 invert" src="https://tailkits.com/ui/iframe/assets/img/logo-big.svg" alt="Logo" />
          
          <div class="mt-6 flex items-center justify-center gap-x-3 md:mt-9 md:gap-x-6">
            <button
              type="button"
              aria-label="Previous testimonial"
              @click="prevTestimonial()"
              class="rounded-full cursor-pointer flex items-center justify-center whitespace-nowrap transition-all shadow-lg bg-dark border border-white/10 text-light hover:bg-white/5 disabled:opacity-50 w-8 h-8 p-1.5 md:w-10 md:h-10 md:p-2.5 xl:w-11 xl:h-11 xl:p-3"
            >
              <img src="/icons/arrow-left.svg" alt="Previous" class="h-5 w-5 shrink-0 brightness-0 invert" />
            </button>
            
            <button
              type="button"
              aria-label="Next testimonial"
              @click="nextTestimonial()"
              class="rounded-full cursor-pointer flex items-center justify-center whitespace-nowrap transition-all shadow-lg bg-dark border border-white/10 text-light hover:bg-white/5 disabled:opacity-50 w-8 h-8 p-1.5 md:w-10 md:h-10 md:p-2.5 xl:w-11 xl:h-11 xl:p-3"
            >
              <img src="/icons/arrow-right.svg" alt="Next" class="h-5 w-5 shrink-0 brightness-0 invert" />
            </button>
          </div>
          
          <!-- Progress Dots -->
          <div class="mt-4 flex justify-center gap-x-2">
            <button @click="currentTestimonial = 0" 
                    class="w-2 h-2 rounded-full transition-all duration-200"
                    :class="currentTestimonial === 0 ? 'bg-white' : 'bg-white/30 hover:bg-white/50'"
                    aria-label="Go to testimonial 1"></button>
            <button @click="currentTestimonial = 1" 
                    class="w-2 h-2 rounded-full transition-all duration-200"
                    :class="currentTestimonial === 1 ? 'bg-white' : 'bg-white/30 hover:bg-white/50'"
                    aria-label="Go to testimonial 2"></button>
            <button @click="currentTestimonial = 2" 
                    class="w-2 h-2 rounded-full transition-all duration-200"
                    :class="currentTestimonial === 2 ? 'bg-white' : 'bg-white/30 hover:bg-white/50'"
                    aria-label="Go to testimonial 3"></button>
          </div>
        </blockquote>
        
        <img class="absolute -top-5 left-0 h-12 xl:-top-16 xl:h-8 brightness-0 invert opacity-50" src="https://tailkits.com/ui/iframe/assets/img/quote.svg" alt="Quote" />
      </figure>
    </div>
</section>