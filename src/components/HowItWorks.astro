<section class="bg-dark pt-12 lg:pt-16 pb-12 lg:pb-16" 
  x-data="{
    activeTab: 'analytics',
    images: {
      analytics: 'https://tailkits.com/ui/iframe/assets/img/browser-mock-up-1.png',
      integration: 'https://tailkits.com/ui/iframe/assets/img/browser-mock-up-2.png',
      interface: 'https://tailkits.com/ui/iframe/assets/img/browser-mock-up-dark.png'
    },
    get currentImage() { return this.images[this.activeTab]; }
  }">
  <div class="max-w-7xl mx-auto px-4 xl:px-0 flex flex-col gap-y-6">
    <div class="flex flex-col items-center">
      <div
        class="badge bg-dark-surface border border-white/10 text-light"
      >
        Introducing Invent-MAG
      </div>
      <div
        class="text-gradient-heading text-3xl font-bold font-heading lg:text-5xl mt-8 text-center sm:mx-auto sm:w-2/3 md:w-3/4 lg:mt-9 lg:leading-tight xl:w-3/5"
      >
        ERP Design Made Easy
      </div>
      <p
        class="text-body text-sm font-medium leading-normal lg:leading-normal lg:text-base mt-4 text-center sm:mx-auto sm:w-2/3 md:w-1/2 xl:w-2/5"
      >
        Streamline your projects with our comprehensive collection of design
        resources and stay ahead in the competitive market
      </p>
      <div
        class="hidden shrink-0 items-center gap-x-1.5 rounded-full bg-dark-surface border border-white/5 p-1.5 lg:mt-9 lg:flex"
      >
        <button
          type="button"
          aria-label="Show tab"
          @click="activeTab = 'analytics'"
          :class="activeTab === 'analytics' ? 'shadow-lg bg-primary text-white' : 'bg-transparent text-gray-muted hover:text-light'"
          class="flex items-center cursor-pointer justify-center transition gap-x-2 whitespace-nowrap rounded-full px-4 py-1.5 font-medium"
        >
          <img src="/icons/bolt.svg" alt="" class="h-4 w-4 shrink-0 opacity-70" />
          Analytics
        </button>
        <button
          type="button"
          aria-label="Show tab"
          @click="activeTab = 'integration'"
          :class="activeTab === 'integration' ? 'shadow-lg bg-primary text-white' : 'bg-transparent text-gray-muted hover:text-light'"
          class="flex items-center cursor-pointer justify-center transition gap-x-2 whitespace-nowrap rounded-full px-4 py-1.5 font-medium"
        >
          <img src="/icons/bolt.svg" alt="" class="h-4 w-4 shrink-0 opacity-70" />
          Integration
        </button>
        <button
          type="button"
          aria-label="Show tab"
          @click="activeTab = 'interface'"
          :class="activeTab === 'interface' ? 'shadow-lg bg-primary text-white' : 'bg-transparent text-gray-muted hover:text-light'"
          class="flex items-center cursor-pointer justify-center transition gap-x-2 whitespace-nowrap rounded-full px-4 py-1.5 font-medium"
        >
          <img src="/icons/bolt.svg" alt="" class="h-4 w-4 shrink-0 opacity-70" />
          Interface
        </button>
      </div>
      <!-- Mobile styles simplified for brevity, generally following the same pattern -->
    </div>
    <figure
      class="relative h-52 overflow-hidden rounded-xl bg-gradient-to-b from-dark-surface to-dark sm:mx-auto sm:w-2/3 md:h-60 md:rounded-2xl lg:mx-4 lg:h-[28rem] lg:w-full lg:rounded-3xl xl:mx-8 xl:h-[37.5rem] mt-12 border border-white/5"
    >
      <img
        class="absolute left-1/2 top-6 h-52 w-11/12 -translate-x-1/2 rounded-md border min-h-full border-white/10 object-cover object-left-top shadow-2xl sm:h-auto lg:top-16 lg:rounded-2xl xl:top-24 transition-opacity duration-300"
        :src="currentImage"
        alt="Browser Mockup"
        x-transition:enter="transition-opacity duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
      />
    </figure>
  </div>
</section>
