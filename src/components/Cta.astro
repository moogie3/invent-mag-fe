---
// Call to Action Component
---
<section class="bg-dark bg-hero-glow py-20 lg:py-24 relative overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 opacity-20 pointer-events-none">
      <div class="absolute -top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-primary/30 blur-[100px]"></div>
      <div class="absolute -bottom-[20%] -right-[10%] w-[50%] h-[50%] rounded-full bg-blue-600/20 blur-[100px]"></div>
  </div>

  <div class="relative z-10 container-custom text-center">
    <h2 class="heading-1 mb-6 text-4xl md:text-5xl">
      Ready to streamline <span class="text-primary">your business?</span>
    </h2>
    <p class="mt-4 text-xl text-body max-w-2xl mx-auto mb-10">
      Join thousands of businesses using Invent-MAG to manage inventory, sales, and accounting in one place.
    </p>
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a
        href="/signup"
        class="btn btn-primary rounded-full px-8 py-3.5 text-base"
      >
        Get started today
      </a>
      <a 
        href="/login" 
        class="btn btn-outline rounded-full px-8 py-3.5 text-base"
      >
        Log in to existing account
      </a>
    </div>
  </div>
</section>
