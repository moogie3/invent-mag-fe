---
// src/components/Modal.astro
export interface Props {
  id: string;
  title?: string;
  type?: 'success' | 'error' | 'info' | 'warning' | 'confirm';
  showIcon?: boolean;
}

const { id, title = '', type = 'info', showIcon = true } = Astro.props;
---

<div id={id} class="modal-overlay" style="display: none;">
  <div class="modal-container">
    <div class="modal-content">
      <!-- Header -->
      <div class="modal-header">
        {showIcon && (
          <div class={`modal-icon modal-icon-${type}`}>
            {type === 'success' && (
              <img src="/icons/modal-success.svg" alt="Success" />
            )}
            {type === 'error' && (
              <img src="/icons/modal-error.svg" alt="Error" />
            )}
            {type === 'info' && (
              <img src="/icons/modal-info.svg" alt="Info" />
            )}
            {type === 'warning' && (
              <img src="/icons/modal-warning.svg" alt="Warning" />
            )}
            {type === 'confirm' && (
              <img src="/icons/modal-confirm.svg" alt="Confirm" />
            )}
          </div>
        )}
        
        {title && <h3 class="modal-title">{title}</h3>}
          
        <button type="button" class="modal-close" data-close-modal={id}>
          <img src="/icons/modal-close.svg" alt="Close" />
        </button>
      </div>

      <!-- Body -->
      <div class="modal-body">
        <slot />
      </div>

      <!-- Footer -->
      <div class="modal-footer">
        <slot name="footer" />
      </div>
    </div>
  </div>
</div>
