---
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const { 
  title = "Invent-MAG - Enterprise Inventory & Accounting",
  description = "A comprehensive enterprise ERP system for inventory management, sales, purchases, CRM, and double-entry accounting. Built with Laravel 11.",
  image = "/og-image.jpg",
  canonical = Astro.url.href,
  noindex = false,
  nofollow = false
} = Astro.props;

// Import the global CSS file
import '../styles/global.css';
import Banner from '../components/Banner.astro';
import Navigation from '../components/Navigation.astro';
---

<html lang="en">
	<head>
		<SEO
			title={title}
			description={description}
			canonical={canonical}
			noindex={noindex}
			nofollow={nofollow}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
					url: canonical,
				},
			optional: {
				description: description,
				siteName: "Invent-MAG",
			},
			}}
		twitter={{
			card: "summary_large_image",
			site: "@inventmag",
			creator: "@inventmag",
			title: title,
			description: description,
			image: image,
		}}
			extend={{
				link: [
					{ rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
					{ rel: "preconnect", href: "https://fonts.googleapis.com" },
					{ rel: "preconnect", href: "https://fonts.gstatic.com", crossorigin: "anonymous" },
					{ rel: "stylesheet", href: "https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&family=Outfit:wght@400;500;600;700&display=swap" },
				],
				meta: [
					{ name: "viewport", content: "width=device-width, initial-scale=1.0" },
					{ name: "generator", content: Astro.generator },
					{ name: "theme-color", content: "#0d121c" },
					{ name: "color-scheme", content: "dark" },
				],
			}}
		/>
		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
	</head>
	<body class="bg-dark bg-hero-glow text-gray-muted font-sans antialiased min-h-screen">
		<div class="relative min-h-screen">
			<Navigation />
			<slot />
		</div>
	</body>
</html>
